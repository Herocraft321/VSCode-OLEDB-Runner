{
  "name": "oledb-runner",
  "displayName": "OLEDB-Runner",
  "description": "This extension is used to execute OLEDB queries to CSV files.",
  "author": {
    "name": "Israel Ojeda Ropero",
    "email": "israelisrael219@gmail.com"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Herocraft321/oledb-runner.git"
  },
  "activationEvents": [],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "oledb-runner.configurarRuta",
        "title": "Configurar Ruta - OLEDB"
      },
      {
        "command": "oledb-runner.Ejecutar",
        "title": "Ejecutar Consulta - OLEDB"
      },
      {
        "command": "oledb-runner.configurarProvider",
        "title": "Configurar Provider - OLEDB"
      },
      {
        "command": "oledb-runner.configurarDelimitador",
        "title": "Configurar Delimitador - OLEDB"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "oledb-runner",
          "title": "OLEDB Execution",
          "icon": "./resources/icon.svg"
        }
      ]
    },
    "views": {
      "oledb-runner": [
        {
          "id": "configuration",
          "name": "configuration"
        }
      ]
    },"configuration": [
      {
        "title": "OLEDB-Runner",
        "properties": {
          "OLEDB-Runner.Engine": {
            "type": "string",
            "default": "x86",
            "enum": ["x86", "x64"],
            "description": "Describes the type of OLEDB system engine"
          },
          "OLEDB-Runner.Defaul-Delimiter":{
            "type": "string",
            "default": ",",
            "description": "Determines the default delimiter for CSV files"
          },
          "OLEDB-Runner.Defaul-Provider":{
            "type": "string",
            "default": "Microsoft.ACE.OLEDB.12.0",
            "description": "Determine the default OLEDB provider"
          }
        }
      }
    ]
  },
  "scripts": {
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
